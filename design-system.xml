      }
      return {
        documents: [],
        total: 0,
        hasMore: false,
        nextPage: 1,
      };
    }
  },

  async getEntryBySlug(slug: string): Promise<ResourceEntry | null> {
    try {
      const response = await databases.listDocuments<ResourceDocument>(
        db,
        resourcesCollection,
